<a class="btn btn-secondary btn-lg btn-block" data-toggle="collapse" href="#documents-upload" aria-expanded="false" aria-controls="collapseExample"
    style="margin-bottom: 1em">Upload dos documentos</a>

<div class="collapse" id="documents-upload">
    <div class="card">
        <div id="viewer" style="display: none">
            <div class="card-header">
                <ul class="nav nav-pills card-header-pills float-xs-left">
                    <li class="nav-item">
                        <a class="nav-link disabled" id="recognize" href="">Extrair Texto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" id="linearize" href="">Linearizar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" id="reset" href="">Reverter</a>
                    </li>
                    <li class="nav-item">
                        <a href="" class="nav-link" id="close">Fechar</a>
                    </li>
                </ul>
            </div>
            <p id="filename" class="text-xs-center"></p>
            <div id="is-img">
                <canvas id="canvas-viewer" class="card-img" data-caman-hidpi-disabled="true"></canvas>
            </div>
            <div id="not-img">
                <object class="card-img-alt" style="display: none" id="object-viewer">
                    <embed class="card-img-alt" style="display: none" id="embed-viewer"></embed>
                </object>
            </div>

            <hr />
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="input-block">
                    <strong>Identidade</strong>
                    <div class="row">
                        <div class="col-sm-12">
                            <label class="btn btn-primary">
                                Capturar 
                        <input type="file" name="identity" />
                            </label>
                            <label class="btn btn-primary">
                                Visualizar 
                        <input type="button" id="viewer-identity" />
                            </label>
                            <p id="filename-identity"></p>
                        </div>
                    </div>
                </div>

                <div class="input-block">
                    <strong>Comprovante de Residência</strong>
                    <div class="row">
                        <div class="col-sm-12">
                            <label class="btn btn-primary">
                                Capturar 
                        <input type="file" name="powerbill" />
                            </label>
                            <label class="btn btn-primary">
                                Visualizar 
                        <input type="button" id="viewer-powerbill" />
                            </label>
                            <p id="filename-powerbill"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="input-block">
                    <strong>Imposto de Renda</strong>
                    <div class="row">
                        <div class="col-sm-12">
                            <label class="btn btn-primary">
                                Capturar 
                        <input type="file" name="IRPF" />
                            </label>
                            <label class="btn btn-primary">
                                Visualizar 
                        <input type="button" id="viewer-IRPF" />
                            </label>
                            <p id="filename-IRPF"></p>
                        </div>
                    </div>
                </div>

                <div class="input-block">
                    <strong>Documentos Adicionais</strong>
                    <div class="row">
                        <div class="col-sm-12">
                            <label class="btn btn-primary">
                                Capturar 
                        <input type="file" name="additional" />
                            </label>
                            <label class="btn btn-primary">
                                Visualizar 
                        <input type="button" id="viewer-additional" />
                            </label>
                            <p id="filename-additional"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
